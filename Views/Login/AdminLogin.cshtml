@model phase3proj.Model.Admin

@{
    ViewData["Title"] = "AdminLogin";
}

<h1 style="color:orangered">AdminLogin</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AdminLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Enter Admin UserName
                <input asp-for="Aname" class="form-control" />
                <span asp-validation-for="Aname" class="text-danger"></span>
            </div>
            <div class="form-group">
                Enter Admin Password
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}