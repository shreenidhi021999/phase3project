@model phase3proj.Model.Customer

@{
    ViewData["Title"] = "CustomerLogin";
}

<h1 style="color:orangered">CustomerLogin</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CustomerLogin">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                Enter Customer UserName
                <input asp-for="Cname" class="form-control" />
                <span asp-validation-for="Cname" class="text-danger"></span>
            </div>
            <div class="form-group">
                Enter Customer Password
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Login" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-controller="login" asp-action="RegisterCustomer"><b>New Customer?, Register Here</b></a>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}